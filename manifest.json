{
  "manifest_version": 3,
  "name": "ThisVid Video Downloader",
  "version": "1.1",
  "permissions": [],
  "host_permissions": ["*://*.thisvid.com/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
